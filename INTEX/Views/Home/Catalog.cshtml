<body>
    <h1 class="text-center">
        <b>Assay Catalog</b>
    </h1>
    <br />

    <button class="collapsible">
            <b class="collapsible-writing">Biochemical Pharmacology Assays</b>
    </button>
    <div class="content">
        <p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AssayID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SummaryInfo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LiteratureReference)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstimaEstimateDaysToComplete)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    if (item.TypeCode == "BP")
                    {
                        <tr>
                            <td>
                                Assay #@Html.DisplayFor(modelItem => item.AssayID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SummaryInfo)
                            </td>
                            <td>
                                <a href="byu.edu">
                                    @Html.DisplayFor(modelItem => item.LiteratureReference)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstimaEstimateDaysToComplete) Business Day(s)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.AssayID }, new { @class = "btn btn-lrg btn-info" })
                            </td>
                        </tr>
                    }
                }

            </table>
        </p>
        <hr />
        <p class="text-center">
            <b>Pricing varies depending on the compound being tested, for a quote give us a call at <a href="byu.edu">(801) 555-5555</a></b>
