
@{
    ViewBag.Title = "About";
}

@{<div id="about">
    <h2>We are Northwest Labs</h2>
    <h4>Reliable Clinical Laboratories, Pathology Groups, & Laboratory Diagnostics Since 1987</h4>
    <hr />
    <div class="founder" style="margin-bottom: 5%">
        <h3>Assay Technology History</h3>
        <img src="~/Content/Images/old_lab.jpg" />
        <figcaption>
            Northwest lab started in 1987 in a small garage lab in Roanoke.
        </figcaption>
    </div>
    <div class="caption">
        <h3>
            We have been in the industry for over 30 years and have conducted more than 130,000 assays.
        </h3>
    </div>
    <div class="about-us">
        <div style="align-self:center">
            <img style="height: 400px" src="~/Content/Images/drug_discovery.jpg" />
        </div>
        <div style="align-self:center">
            <h3>Top Quality, Affordable Price</h3>
            <img src="~/Content/Images/dna.jpg" />
        </div>
    </div>
    <div class="group-image">
        <img src="~/Content/Images/lab_group.jpg" />
    </div>
    <hr />
    <div class="social-links">
        <h2>Follow Us On</h2>
        <div class="icons">
            <a href="https://twitter.com/">
                <img class="icon" src="~/Content/images/twitter.png" />
            </a>
            <a href="https://www.facebook.com/">
                <img class="icon" src="~/Content/images/facebook.png" />
            </a>
            <a href="https://www.instagram.com/">
                <img class="icon" src="~/Content/images/instagram.png" />
            </a>
        </div>
    </div>
</div>
}
<style>
    #about {
        text-align: center;
        margin: 5% auto;
    }

        #about .about-us {
            display: grid;
            grid-row-gap: 10px;
            grid-column-gap: 20px;
            grid-template-columns: repeat(2, 1fr);
        }

        #about .group-image {
            margin: 5% auto;
        }

        #about .caption {
            margin: 5% auto;
        }

        #about figcaption {
            margin: 2% 0 4% 0;
        }

        #about .icons {
            display: inline;
        }

            #about .icons img {
                width: 10%;
                margin: 3%;
            }

        #about .jumbo {
            margin-top: 5%;
        }

        #about .social-links {
            margin: 3% auto 2% auto;
            width: 50%;
        }
</style>

