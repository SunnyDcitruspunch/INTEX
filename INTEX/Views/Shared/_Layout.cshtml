<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NorthWest Labs</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/lumen.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Assay Catalog", "Catalog", "Home", new { area = "" }, new { @class = "navbar-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About Us", "About", "Home", new { area = "" }, new { @class = "navbar-link" })
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Function2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Function2</a>
                </li>
            </ul>
        </div>
        <div class="mx-auto order-0">
            @Html.ActionLink("Northwest Labs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 24px" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Worker Portal</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Customer Portal", "Login", "Customer", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <footer class="footer">
        <hr />
            <p style="text-align:center">&copy; @DateTime.Now.Year - NorthWest Labs</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

<style>
    .nav-link {
        font-size: 16px;
    }

    .bottom {
        margin-top: 50px;
    }

</style>