@model IEnumerable<INTEX.Models.WorkOrder>

@{
    ViewBag.Title = "WorkOrder";
}

<link href="~/Content/SingaporeStyles/SingaporeStyles.css" rel="stylesheet" />

<div class="jumbotron jumbotron-fluid">
    <div class="container backgroundText">
        <h1 class="display-3">Work Order Status</h1>
        <h2>View, Edit, Provide a Quote</h2>
        <hr>
        <p>
            @Html.ActionLink("Create New", "CreateWorkOrder", null, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Return to Employee Portal", "Index", null, new { @class = "btn btn-info" })
        </p>
    </div>
</div>
<div class="box green">Passed</div>
<div class="box gray">In Progress</div>
<div class="box red">Failed</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Progress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LTNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Progress == "Passed")
        {
            <tr class="green">
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LTNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditWorkOrder", new { id = item.OrderID }) |
                    @Html.ActionLink("Details", "DetailsWorkOrder", new { id = item.OrderID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
                </td>
            </tr>
        }
        else if (item.Progress == "In Progress")
        {
            <tr class="gray">
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LTNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditWorkOrder", new { id = item.OrderID }) |
                    @Html.ActionLink("Details", "DetailsWorkOrder", new { id = item.OrderID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
                </td>
            </tr>
        }
        if (item.Progress == "Failed")
        {
            <tr class="red">
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LTNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditWorkOrder", new { id = item.OrderID }) |
                    @Html.ActionLink("Details", "DetailsWorkOrder", new { id = item.OrderID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
                </td>
            </tr>
        }

    }

</table>
